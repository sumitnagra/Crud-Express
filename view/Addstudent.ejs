<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/all.css">
<link rel="stylesheet" href="/bootstrap.css">
  
  <title>Add student</title>
</head>

<body>
  <div class="container mt-5">
    <div class="row ">
      <div class="col-sm-5">
        <h3 class="alert alert-success text-center">Add new student</h3>
        <hr>
        <form method="post">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="form-control" id="name">
          <label for="age" class="form-label">Age</label>
          <input type="text" name="age" class="form-control" id="age">
          <label for="fees" class="form-label">Fees</label>
          <input type="number" name="fees" class="form-control" id="fees">
          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
      <div class="col-sm-7">
        <h3 class="alert alert-danger text-center">All student list</h3>
        <hr>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">SNo.</th>
              <th scope="col">Name</th>
              <th scope="col">Age</th>
              <th scope="col">Fees</th>
              <th scope="col">Join</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% var n=1; %>
              <% data.forEach((item)=>{ %>
                <% var year=item.join.getFullYear() %>
                  <% var month=item.join.toLocaleString('default',{month:'short'})%>
                    <% var date=item.join.getDate() %>
                      <tr>
                        <th scope="row">
                          <%= n %>
                        </th>
                        <td>
                          <%= item.name %>
                        </td>
                        <td>
                          <%= item.age %>
                        </td>
                        <td>
                          <%= item.fees %>
                        </td>
                        <td>
                          <%=date%>/<%=month%>/<%=year%>
                        </td>
                        <td>
                          <form action="/edit/<%= item._id%>" method="get" class="d-inline">
                            <button type="submit" class="btn"><i class="fa-solid fa-pen-to-square mx-2">
                              </i>
                            </button>
                          </form>
                          <form method="post" class="d-inline" action='/delete/<%=item._id %>'>
                            <button type="submit" class="btn">
                              <i class="fa-solid fa-trash"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                      <% n=n+1 %>
                        <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <script src="/all.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
    crossorigin="anonymous"></script>
</body>

</html>